{
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019"],
    "module": "commonjs",
    "outDir": "./dist",
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@api-ts/io-ts-http": ["../io-ts-http"],
      "@api-ts/superagent-wrapper": ["../superagent-wrapper"]
    }
  },
  "references": [
    {"path": "../io-ts-http"},
    {"path": "../superagent-wrapper"}
  ]
}
